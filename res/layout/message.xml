<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <EditText android:layout_alignParentLeft="true" android:id="@+id/editTextMessage" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginTop="20dp"></EditText>
    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="10dp" android:id="@+id/buttonSend" android:layout_below="@+id/editTextMessage" android:layout_alignRight="@+id/editTextMessage" android:text="Send message"></Button>
</RelativeLayout>
