<?xml version="1.0" encoding="utf-8"?>
<!-- /res/layout/prompt_dialog.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:padding="4dip" android:layout_width="match_parent" android:layout_height="match_parent"
	android:theme="@android:style/Theme.Black.NoTitleBar" android:gravity="top">

	<TextView android:id="@+id/TextView_Dialog_Prompt"
		android:text="@string/dialog_prompt_text" android:layout_weight="1"
		android:layout_gravity="center_vertical|center_horizontal"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:gravity="top|center_horizontal" android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp" android:layout_marginBottom="20dp"
		android:layout_marginTop="5dp" android:layout_width="fill_parent"
		android:layout_height="wrap_content"/>

	<LinearLayout android:orientation="horizontal"
		android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_below="@+id/TextView_Dialog_Prompt">

		<Button android:id="@+id/btn_dialog_yes" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Yes, i will"
			android:layout_weight="1">
		</Button>

		<Button android:id="@+id/btn_dialog_no" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="No, not yet"
			android:layout_weight="1">
		</Button>

	</LinearLayout>
</RelativeLayout>